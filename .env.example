# ===============================================
# NONGOR TELEGRAM BOT V3 - ENVIRONMENT CONFIG
# ===============================================
# Copy this file to .env and fill in your values

# -----------------------------------------------
# TELEGRAM CONFIGURATION
# -----------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of admin Telegram user IDs
# Get your ID from @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321

# -----------------------------------------------
# AI CONFIGURATION (Google Gemini)
# -----------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# -----------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------
# PostgreSQL connection string (Neon recommended)
NETLIFY_DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# -----------------------------------------------
# WEBSITE CONFIGURATION
# -----------------------------------------------
WEBSITE_URL=https://nongor-brand.vercel.app
FB_PAGE_URL=https://facebook.com/nongor

# -----------------------------------------------
# BUSINESS INFORMATION
# -----------------------------------------------
BUSINESS_PHONE=+880 1711-222333
BUSINESS_EMAIL=support@nongor.com
BUSINESS_NAME=Nongor Premium

# -----------------------------------------------
# FEATURE TOGGLES
# -----------------------------------------------
ENABLE_WEB_SCRAPING=true
ENABLE_ORDER_NOTIFICATIONS=true
CONTEXT_CACHE_SECONDS=300
MONITOR_INTERVAL_SECONDS=300

# -----------------------------------------------
# EMAIL (SendGrid) - Optional
# -----------------------------------------------
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@nongor.com
SENDGRID_FROM_NAME=Nongor Premium

# -----------------------------------------------
# GOOGLE SHEETS EXPORT - Optional
# -----------------------------------------------
GOOGLE_SHEETS_CREDENTIALS_FILE=
GOOGLE_SHEETS_SPREADSHEET_ID=

# -----------------------------------------------
# COURIER TRACKING - Optional
# -----------------------------------------------
# Pathao
PATHAO_CLIENT_ID=
PATHAO_CLIENT_SECRET=
PATHAO_USERNAME=
PATHAO_PASSWORD=
PATHAO_API_URL=https://api-hermes.pathao.com

# Steadfast
STEADFAST_API_KEY=
STEADFAST_SECRET_KEY=
STEADFAST_API_URL=https://portal.steadfast.com.bd/api/v1

# -----------------------------------------------
# WEBSITE MONITORING
# -----------------------------------------------
WEBSITE_CHECK_TIMEOUT=10
ORDER_POLL_INTERVAL=60

# -----------------------------------------------
# LOGGING
# -----------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=bot.log
